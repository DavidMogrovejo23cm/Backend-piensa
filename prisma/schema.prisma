generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Jefe {
  id            Int          @id @default(autoincrement())
  nombre        String
  correo        String
  contrasena    String
  jefeRol       JefeRol?     @relation(fields: [jefeRolId], references: [id])
  jefeRolId     Int?
  jefespeakers  JefeSpeaker[]
  reportes      Reporte[]
}

model Empleado {
  id               Int                @id @default(autoincrement())
  nombre           String
  telefono         String
  correo           String
  salario_hora     Float
  activo           Boolean
  jefe_id          Int
  empleadoRol      EmpleadoRol?      @relation(fields: [empleadoRolId], references: [id])
  empleadoRolId    Int?
  empleadospeakers EmpleadoSpeaker[]
  qrTokens         QRToken[]
  asistencias      RegistroAsistencia[]
}

model QRToken {
  id          Int      @id @default(autoincrement())
  token       String   @unique
  empleado_id Int
  creado_en   DateTime
  expira_en   DateTime
  usado       Boolean
  qrCode      String?  // Campo opcional para almacenar el QR en base64

  empleado    Empleado @relation(fields: [empleado_id], references: [id])
}

model RegistroAsistencia {
  id                Int       @id @default(autoincrement())
  empleado_id       Int
  fecha             DateTime
  hora_entrada      DateTime?
  hora_salida       DateTime?
  horas_trabajadas  Float
  salario_calculado Float

  empleado          Empleado @relation(fields: [empleado_id], references: [id])
}


model EmpleadoRol {
  id          Int       @id @default(autoincrement())
  name        String    @unique
  description String
  empleados   Empleado[]
}

model JefeRol {
  id          Int       @id @default(autoincrement())
  name        String    @unique
  description String
  jefes       Jefe[]
}

model EmpleadoSpeaker {
  id         Int      @id @default(autoincrement())
  empleado   Empleado @relation(fields: [empleadoId], references: [id])
  empleadoId Int
  speaker    Speaker  @relation(fields: [speakerId], references: [id])
  speakerId  Int
}

model JefeSpeaker {
  id        Int      @id @default(autoincrement())
  jefe      Jefe     @relation(fields: [jefeId], references: [id])
  jefeId    Int
  speaker   Speaker  @relation(fields: [speakerId], references: [id])
  speakerId Int
}

model Speaker {
  id                Int                @id @default(autoincrement())
  nombre            String
  empleadoSpeakers  EmpleadoSpeaker[]
  jefeSpeakers      JefeSpeaker[]
}